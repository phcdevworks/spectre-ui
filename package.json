{
  "name": "@phcdevworks/spectre-ui",
  "version": "0.2.1",
  "description": "Framework-agnostic UI layer for the Spectre design system. Provides base CSS, component classes, utilities, and a Tailwind preset powered by @phcdevworks/spectre-tokens.",
  "keywords": [
    "phcdevworks",
    "spectre",
    "spectre-ui",
    "design-system",
    "design-tokens",
    "component-library",
    "ui-library",
    "ui-components",
    "tailwindcss",
    "css-utilities",
    "css-framework",
    "tokens",
    "utilities"
  ],
  "author": "PHCDevworks",
  "license": "MIT",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/phcdevworks"
    },
    {
      "type": "buymeacoffee",
      "url": "https://buymeacoffee.com/phcdevworks"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/phcdevworks/spectre-ui.git"
  },
  "bugs": {
    "url": "https://github.com/phcdevworks/spectre-ui/issues"
  },
  "homepage": "https://github.com/phcdevworks/spectre-ui#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind/index.d.ts",
      "import": "./dist/tailwind/index.js",
      "require": "./dist/tailwind/index.cjs"
    },
    "./index.css": "./dist/index.css",
    "./base.css": "./dist/base.css",
    "./components.css": "./dist/components.css",
    "./utilities.css": "./dist/utilities.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.0 || ^4.0.0"
  },
  "dependencies": {
    "@phcdevworks/spectre-tokens": "^0.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.15",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
